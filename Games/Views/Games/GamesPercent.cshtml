@model ProjectGames.DTO.GamesDTO

<body style="background-color:#222222">
    @if (ViewBag.completism != 100)
    {
        <i class="fa fa-house" id="id_house" asp-area="" asp-controller="Games" asp-action="Index" style="width:40px; height:40px;margin-top:80px;margin-left:15px"></i>

        <div class="justify-content-center" style="margin-top:2%;display:flex">
            <h1 style="color:white;">Jogos Incompletos</h1>
            <i class="fa fa-bars-progress" style="color:white;width:30px;height:30px;margin-top:13px;margin-left:8px"></i>
        </div>
    }
    else
    {
        <i class="fa fa-house" id="id_house" onclick="" style="width:40px; height:40px;margin-top:80px;margin-left:15px"></i>

        <div class="justify-content-center" style="margin-top:2%;display:flex">
            <h1 style="color:white;">Jogos Perfeitos</h1>
            <i class="fa fa-medal" style="color:white;width:30px;height:30px;margin-top:13px;margin-left:8px"></i>
        </div>
    }
    <div class="row justify-content-center" style="margin-top:8%; z-index:5">
        @foreach (var item in Model.listGames)
        {
            if (ViewBag.completism != 100)
            {
                if (item.imagemCustom == null)
                {
                    <div class="card" style="width:294px; height:352px; background-image:url(@item.imagem); background-size:cover; background-repeat:no-repeat; margin-left:25px; margin-bottom:30px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; border: 6px inset #e9e9e9;cursor:pointer">
                        <div style="width:35px;height:35px;background-color:white;border-radius:50%;position:relative;margin-left:-30px;margin-top:-20px;border: 2px inset #c0c0c0;background-color:#222222"><i class="fa fa-xmark" style="color:#c0c0c0;height:23px;width:23px;margin-left:4px;margin-top:4px"></i></div>
                        <div onclick="PageGame(@item.id)" style="min-width:294px; min-height:282px; position:absolute; top:60px; left:0px;"></div>
                    </div>
                }
                else
                {
                    <div class="card" style="width:294px; height:352px; background-image:url('data:image /png;base64,@item.imagemCustom'); background-size:cover; background-repeat:no-repeat; margin-left:25px; margin-bottom:30px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;border: 6px inset #e9e9e9;cursor:pointer">
                        <div style="width:35px;height:35px;background-color:white;border-radius:50%;position:relative;margin-left:-30px;margin-top:-20px;border: 2px inset #c0c0c0;background-color:#222222"><i class="fa fa-xmark" style="color:#c0c0c0;height:23px;width:23px;margin-left:4px;margin-top:4px"></i></div>
                        <div onclick="PageGame(@item.id)" style="min-width:294px; min-height:282px; position:absolute; top:60px; left:0px;"></div>
                    </div>
                }
            }
            else
            {
                if (item.imagemCustom == null)
                {
                    <div class="card" style="width:294px; height:352px; background-image:url(@item.imagem); background-size:cover; background-repeat:no-repeat; margin-left:25px; margin-bottom:30px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; border: 6px inset #ffc746;cursor:pointer">
                        <div style="width:35px;height:35px;background-color:white;border-radius:50%;position:relative;margin-left:-30px;margin-top:-20px;border: 2px inset #ffc746;background-color:#222222"><i class="fa fa-star" style="color:#ffd700;height:23px;width:23px;margin-left:4px;margin-top:4px"></i></div>
                        <div onclick="PageGame(@item.id)" style="min-width:294px; min-height:282px; position:absolute; top:60px; left:0px;"></div>
                    </div>
                }
                else
                {
                    <div class="card" style="width:294px; height:352px; background-image:url('data:image /png;base64,@item.imagemCustom'); background-size:cover; background-repeat:no-repeat; margin-left:25px; margin-bottom:30px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; border: 6px inset #ffc746;cursor:pointer">
                        <div style="width:35px;height:35px;background-color:white;border-radius:50%;position:relative;margin-left:-30px;margin-top:-20px;border: 2px inset #ffc746;background-color:#222222"><i class="fa fa-star" style="color:#ffd700;height:23px;width:23px;margin-left:4px;margin-top:4px"></i></div>
                        <div onclick="PageGame(@item.id)" style="min-width:294px; min-height:282px; position:absolute; top:60px; left:0px;"></div>
                    </div>
                }
            }
        }
    </div>
</body>

<style>
    #id_house {
        color: white;
    }

        #id_house:hover {
            color: #8cb4ff;
        }
</style>

<script>
    function PageGame(id) {
        window.location.href = '@Url.Action("PageGame", "Games")?id=' + id;
    }
</script>
