
<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="..."></script>

<body style="background-color:#222222;overflow-x: hidden;overflow-y: auto;">
    <header style="background-color:#FFFCF4;position:fixed;z-index:9999;width:100%;height:57px;top:-0.1%;left:0px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <div id="divHide" style="display:block">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <img src="~/img/PgInicial/Logo.png" id="id_logo" style="width:25px; height:35px" />
                            <li class="nav-item" style="margin-left:15px">
                                <a class="nav-link text-dark" asp-area="" asp-controller="pgInicial" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dispensa" asp-action="Index">Dispensa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Finanças" asp-action="Index">Finanças</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Biblioteca</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div style="width:100%; height:70px; background-color: rgba(0,0,0,.5);  position:fixed; top:57px; left:0px;box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;z-index:9999;">
        <div style="position:absolute; left:86%;background-color:#262c36; border-radius:5px; margin-top:10px; height:45px;">
            <img src="@ViewBag.Profile.avatar" width="47px" height="45;" />
            <a asp-area="" asp-controller="Games" asp-action="Profile">
                <button class="btn" style="background-color:#262c36;width:140px; height:36px; border-radius:3px;">
                    <p style="color:white;margin-top:-3px;">@ViewBag.Profile.name</p>
                </button>
            </a>
            <i class="fa fa-arrows-rotate" onclick="refreshStatsGames()" style="width:50px; 50px; margin-top:8px; left:0%; color:aquamarine; cursor:pointer"></i>
        </div>

        <div style="margin-left:6%;position:absolute;top:25%">
            <a class="" asp-area="" asp-controller="Games" asp-action="GamesCategoria" style="font-size:17px;text-decoration:none;color:white">Categorias</a>
        </div>

        <div style="margin-left:11.5%;position:absolute;top:25%">
            <a class="" asp-area="" asp-controller="Games" asp-action="GamesScreenshot" style="font-size:17px;text-decoration:none;color:white">Screenshots</a>
        </div>

        <div style="margin-left:18%;position:absolute;top:25%">
            <a class="" asp-area="" asp-controller="Games" asp-action="Index" style="font-size:17px;text-decoration:none;color:white">Anotações</a>
        </div>
    </div>

    <div class="justify-content-center" style="margin-top:10%; display:flex">
        <div class="card mb-3" style="width: 25rem; height:35rem;border-color:blue">
            <div class="card-header" style="background-color:blue;text-align:center"><b style="color:white;">Top  Conquistas raras</b></div>
            <div>
                @foreach (var item in ViewBag.AllRareAchiev)
                {
                    <div style="display:block;border-bottom:1px solid black;padding:12.6px">
                    <img src="@item.icon" title="@item.descricao" width="60" height="60" />
                        <div style="display:inline-flex">
                            <b style="color:aqua;margin-left:8px;position:absolute;margin-top:-15px">@item.nomeGame</b>
                            <p style="color:red;margin-left:8px;white-space:nowrap;max-width:23ch;text-overflow: ellipsis;overflow: hidden;transform:translate(0%,25%)">@item.nome</p>
                            <b style="color:white;margin-top:15px;margin-left:65%;position:absolute;color:#8cb4ff">@item.porcentagem%</b>
                            <i class="fa fa-award" style="color:white;margin-top:20px;margin-left:240px;position:absolute;color:#8cb4ff"></i>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
