@model ProjectGames.DTO.GamesDTO

@foreach (var item in Model.listGames)
{
    <div style="margin-left:15px">
        <div class="card" style="width:184px; height:230px; background-image:url(); background-size:cover; background-repeat:no-repeat; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 25px 10px; border:none;">
            @if (item.imagemCustom == null)
            {
                <img src="@item.imagem" style="width:100%; height:100%;border-radius:4px;object-fit:cover" />
            }
            else
            {
                <img src="data:image /png;base64,@item.imagemCustom" style="width:100%; height:100%;border-radius:4px;object-fit:cover" />
            }
            <div id="" style="position:absolute;background-color:rgba(0,0,0,.9);width:100.4%;height:35.5px;left:0%;top:84.5%;display:flex;border-bottom-left-radius:4px;border-bottom-right-radius:4px;display:block">
                <div style="width:90%;height:35px;border-left:4px solid #FFCF40">
                    <p style="color: white;font-size:13px;max-width:26.5ch;overflow: hidden;margin-left:3px">@item.nome</p>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function moreFavGames(tipo) {
        var size = "@ViewBag.CountSizeFavGame";
        var pagina = "@ViewBag.Page";
        
        FavGames(tipo, size, pagina);
    }
</script>
