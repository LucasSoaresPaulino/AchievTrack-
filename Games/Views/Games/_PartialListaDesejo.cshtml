@foreach (var item in ViewBag.lstDesejo)
{
    <div class="" style="display:inline-flex;padding:20px;border-bottom:1px solid black;max-width:442px;">
        <img src="@item.image" style="width:200px; height:90px;" />
        <p style="margin-left:15px;color:white;white-space:nowrap;font-size:18px;min-width:20ch;text-overflow: ellipsis;overflow: hidden;">@item.Name</p>
        <div style="display:inline-flex; transform:translate(-105%,20%)">
            <p style="color:white;white-space:nowrap;font-size:14px;margin-top:8%"> Review:</p>
            <p style="margin-left:15px;color:#8cb4ff;white-space:nowrap;font-size:14px;margin-top:8%;white-space:nowrap;max-width:10ch;text-overflow: ellipsis;overflow: hidden; ">@item.Review</p>
            <br/>
            <i class="fa fa-trash" style="color:#EF601E;margin-top:28%; width:21px; height:21px"></i>
        </div>
    </div>
}
